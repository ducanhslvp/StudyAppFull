<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@drawable/radius_circle"
        android:backgroundTint="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/txt_className"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_joinClass"
            android:layout_width="155dp"
            android:backgroundTint="@color/btnsucces"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_marginStart="175dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/txt_className"
            android:text="Vào lớp" />
        <Button
            android:id="@+id/btn_deleteClass"
            android:layout_width="155dp"
            android:backgroundTint="@color/red2"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentTop="true"
            android:layout_marginStart="175dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/txt_className"
            android:text="Xóa" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>